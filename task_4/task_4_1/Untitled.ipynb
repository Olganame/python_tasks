    "def counter(func):\n",
    "    def wrapper():\n",
    "        wrapper.count += 1\n",
    "        res = func()\n",
    "        print(wrapper.count)\n",
    "        return res\n",
    "    wrapper.count = 0\n",
    "    return wrapper"
   ]
